package com.controller;

import com.bean.Vehicles;
import com.dao.VehicleDao;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.*;
import java.io.IOException;

@WebServlet("/VehicleController")
public class VehicleController extends HttpServlet {

    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        try {
            // Get data from form
            int driverId = Integer.parseInt(request.getParameter("driver_id"));
            String numberPlate = request.getParameter("number_plate");
            String type = request.getParameter("type");
            String insurance = request.getParameter("insurance_expiry");

            // Set values in bean
            Vehicles v = new Vehicles();
            v.setDriver_id(driverId);
            v.setNumber_plate(numberPlate);
            v.setType(type);
            v.setInsurance_expiry(insurance);

            // Insert into DB
            VehicleDao.insertVehicle(v);

            response.getWriter().println("<h3>Vehicle Added Successfully</h3>");

        } catch (Exception e) {
            e.printStackTrace();
            response.getWriter().println("Error: " + e.getMessage());
        }
    }
}
