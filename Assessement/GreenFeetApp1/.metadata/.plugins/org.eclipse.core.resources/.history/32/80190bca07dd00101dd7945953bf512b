<script>
let slides=document.querySelectorAll(".slide");
let i=0;
setInterval(()=>{
  slides[i].classList.remove("active");
  i=(i+1)%slides.length;
  slides[i].classList.add("active");
},5000);

function toggleMenu(){
  document.getElementById("menu").classList.toggle("active");
}
</script>

